<resources>
    <!-- Base application theme. -->
    <style name="Theme.Educa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple800</item>
        <item name="colorPrimaryVariant">@color/purple900</item>
        <item name="colorOnPrimary">@color/blue800</item>
        <!-- Secundary brand color -->
        <item name="colorSecondary">@color/purple800</item>
        <item name="colorSecondaryVariant">@color/blue500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Fonts -->

    <style name="style_title">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="style_subTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="style_bigTxt">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="style_subText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="style_link">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue500</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="style_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="style_textSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_textXSmall">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="style_textXXSmall">
        <item name="android:textSize">8sp</item>
    </style>

    <!-- style input -->
    <style name="style_ipt">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey600</item>
        <item name="android:background">@drawable/db_input</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <!-- style buttons -->
    <style name="style_btnYellowLarger">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/yellow500</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="style_btnBorderPurpleLarger">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/purple400</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/purple400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_btnBorderBlackLarger">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_btnYellowSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingStart">30dp</item>
