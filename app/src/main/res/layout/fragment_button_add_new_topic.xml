<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonAddNewTopic">

    <RelativeLayout
        android:id="@+id/btnAddTopic"
        style="@style/style_btnYellowLarger"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/db_btn_solid"
        android:paddingStart="5dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/adc" />

        <TextView
            android:id="@+id/txt_see_topic"
            style="@style/style_textXSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_add"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/txt_add_new_topic" />


    </RelativeLayout>

</FrameLayout>